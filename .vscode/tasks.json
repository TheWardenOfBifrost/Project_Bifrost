{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "git: quick push",
      "type": "process",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy", "Bypass",
        "-File", "tools/quick_commit.ps1"
      ],
      "problemMatcher": []
    },
    {
      "label": "run api (uvicorn task)",
      "type": "process",
      "command": "${workspaceFolder}/mvp/backend/.venv/Scripts/python.exe",
      "args": [
        "-m", "uvicorn",
        "src.api.main:app",
        "--reload",
        "--host", "127.0.0.1",
        "--port", "8001"
      ],
      "options": { "cwd": "${workspaceFolder}/mvp/backend" },
      "problemMatcher": []
    }
  ]
}
